.card
  position relative
  display flex
  flex-direction column
  transition transform 0.3s ease
  
  &:hover
    transform translateY(-4px)

.imageWrapper
  position relative
  aspect-ratio 3/4
  overflow hidden
  background-color #F5F1EC
  margin-bottom 0.75rem
  
.image
  width 100%
  height 100%
  object-fit cover
  transition transform 0.6s ease
  
  .imageWrapper:hover &
    transform scale(1.05)

.badge
  position absolute
  top 1rem
  left 1rem
  background-color #000000
  color #FFFFFF
  padding 0.25rem 0.75rem
  font-size 0.75rem
  font-weight 600
  letter-spacing 0.05em
  text-transform uppercase

.wishlist
  position absolute
  top 1rem
  right 1rem
  background-color rgba(255, 255, 255, 0.9)
  padding 0.5rem
  border-radius 50%
  opacity 0
  transition opacity 0.3s ease
  cursor pointer
  
  &:hover
    background-color #FFFFFF
  
  .imageWrapper:hover &
    opacity 1

.content
  display flex
  flex-direction column
  gap 0.25rem
  padding 0 0.25rem

.ref
  font-size 0.7rem
  font-weight 400
  color #999999
  letter-spacing 0.05em
  text-transform uppercase

.name
  font-size 0.8rem
  font-weight 500
  color #000000
  text-decoration none
  transition color 0.2s ease
  line-height 1.3
  
  &:hover
    color #D4C5B9

.priceWrapper
  display flex
  align-items center
  gap 0.5rem

.price
  font-weight 600
  color #000000

.salePrice
  font-weight 600
  color #000000

.originalPrice
  font-size 0.875rem
  color #999999
  text-decoration line-through

.colors
  display flex
  gap 0.5rem
  margin-top 0.25rem

.colorDot
  width 1rem
  height 1rem
  border-radius 50%
  border 1px solid rgba(0, 0, 0, 0.1)
  cursor pointer
  transition transform 0.2s ease
  
  &:hover
    transform scale(1.2)
